<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="800.0" maxWidth="1200.0" minHeight="1000.0" minWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.laboratory__3.HelloController">
   <children>
       
       <TitledPane expanded="true" layoutX="20.0" layoutY="380.0" minHeight="150.0" prefHeight="320.0" prefWidth="1160.0" text="Coding Parameters">
           <VBox prefHeight="643.0" prefWidth="518.0" spacing="10.0">
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="300.0" prefWidth="250.0" spacing="20.0">
                     <children>
                            <Label text="Error Rate:" />
                           <HBox alignment="CENTER_LEFT" spacing="10.0">
                               <Slider fx:id="errorRateSlider" majorTickUnit="10" max="100" min="0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="10" />
                               <Label fx:id="errorRateLabel" text="10%" />
                           </HBox>

                           <Button onAction="#onRunCascadeCodingButtonClick" style="-fx-font-weight: bold;" text="Run Cascade Coding" />

                           <HBox alignment="CENTER" spacing="10">
                               <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
                               <Label fx:id="progressLabel" text="0%" />
                           </HBox>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>

                     <TitledPane expanded="true" minHeight="277.0" minWidth="0.0" prefHeight="280.0" prefWidth="450.0" text="Block Code">
                         <VBox prefHeight="203.0" prefWidth="496.0" spacing="10.0">
                             <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <Label text="Matrix Type:" />

                                 <RadioButton selected="true" text="G (Generator)">
                              <toggleGroup>
                                 <ToggleGroup fx:id="matrixTypeGroup" />
                              </toggleGroup>
                           </RadioButton>
                                 <RadioButton text="H (Parity Check)" toggleGroup="$matrixTypeGroup" />
                             </HBox>

                             <Label text="Matrix (one row per line):" />
                             <TextArea fx:id="matrixTextArea" prefRowCount="5" text="1101&#10;1011&#10;0111" wrapText="true" />

                             <Button onAction="#onSetupBlockCodeButtonClick" text="Setup Block Code" />

                             <HBox spacing="20.0">
                                 <Label text="n:" />
                                 <Label fx:id="nLabel" text="-" />
                                 <Label text="k:" />
                                 <Label fx:id="kLabel" text="-" />
                                 <Label text="dmin:" />
                                 <Label fx:id="dminLabel" text="-" />
                                 <Label text="t:" />
                                 <Label fx:id="tLabel" text="-" />
                             </HBox>
                         </VBox>
                     </TitledPane>

                     <TitledPane expanded="true" prefHeight="280.0" prefWidth="450.0" text="Convolutional Code">
                         <VBox spacing="10.0">
                             <Label text="Polynomials (one per line, comma-separated indices):" />
                             <TextArea fx:id="polynomialsTextArea" prefRowCount="3" text="0,1,2&#10;0,2" wrapText="true" />

                             <CheckBox fx:id="verboseCheckBox" mnemonicParsing="false" text="Verbose Output" />
                             <CheckBox fx:id="saveIntermediateImagesCheckBox" mnemonicParsing="false" text="Save Intermediate Images" />

                             <Button onAction="#onSetupConvolutionalCodeButtonClick" text="Setup Convolutional Code" />
                         </VBox>
                     </TitledPane>
               </children>
            </HBox>
           </VBox>
       </TitledPane>
       
       <VBox layoutX="20.0" layoutY="60.0" minWidth="1160.0" prefHeight="300.0" prefWidth="800.0" spacing="20.0">
           <HBox alignment="CENTER" spacing="20.0">


               <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
                   <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Input Image" />
                   <ImageView fx:id="inputImageView" fitHeight="210.0" fitWidth="210.0" preserveRatio="true" />
                   <Button onAction="#onLoadImageButtonClick" text="Load Image" />
               </VBox>


               <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
                   <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Encoded Image" />
                   <ImageView fx:id="blockEncodedImageView" fitHeight="210.0" fitWidth="210.0" preserveRatio="true" />
                   <Label text="(With Coding)" />
               </VBox>

               <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
                   <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Error Encoded Image" />
                   <ImageView fx:id="blockEncodedWithErrorsImageView" fitHeight="210.0" fitWidth="210.0" preserveRatio="true" />
                   <Label text="(With Coding and error)" />
               </VBox>

               <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
                   <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Noisy Image" />
                   <ImageView fx:id="noisyImageView" fitHeight="210.0" fitWidth="210.0" preserveRatio="true" />
                   <Label text="(Without Coding)" />
               </VBox>
               <VBox alignment="CENTER" prefWidth="200.0" spacing="10.0">
                   <Text style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Decoded Image" />
                   <ImageView fx:id="outputImageView" fitHeight="210.0" fitWidth="210.0" preserveRatio="true" />
                   <Button onAction="#onSaveImageButtonClick" text="Save Image" />
               </VBox>
           </HBox>
       </VBox>
       
       <TitledPane expanded="true" layoutX="20.0" layoutY="710.0" maxWidth="1166.0" minHeight="284.0" minWidth="620.0" prefHeight="284.0" prefWidth="1166.0" text="Log">
           <VBox minWidth="400.0" spacing="10.0" VBox.vgrow="ALWAYS">
               <TextArea fx:id="logTextArea" editable="false" prefHeight="321.0" prefWidth="608.0" wrapText="true" VBox.vgrow="ALWAYS" />
               <HBox minWidth="400.0" spacing="10.0">
                   <Button onAction="#onClearLogButtonClick" text="Clear Log" />
                   <Button onAction="#onSaveLogButtonClick" text="Save Log" />
                   <Button onAction="#onOpenIntermediateDataButtonClick" text="Open Intermediate Data" />
               </HBox>
           </VBox>
       </TitledPane>

       <Text layoutX="450.0" layoutY="40.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Cascade Coding Application" />
   </children>
</AnchorPane>
